test -f ~/.config/aurpkg/aurpkg.conf
if [[ $? == 0 ]]
then
    echo "The configuration file already exist"
    echo "Do you want to remove it? (y/n)"
    read RMCONF
else
    mkdir ~/.config/aurpkg
    touch ~/.config/aurpkg/aurpkg.conf
    echo "What is your text editor?"
    read TEXTEDITOR
    echo "EDITOR=$TEXTEDITOR" >> ~/.config/aurpkg/aurpkg.conf
fi
if [[ $RMCONF == y ]]
then
    rm -rf ~/.config/aurpkg
    mkdir ~/.config/aurpkg
    touch ~/.config/aurpkg/aurpkg.conf
    echo "What is your text editor?"
    read TEXTEDITOR
    echo "EDITOR=$TEXTEDITOR" >> ~/.config/aurpkg/aurpkg.conf
fi
